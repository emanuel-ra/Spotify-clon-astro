---
import { playlists } from '@/lib/data';
import Layout from '../layouts/Layout.astro';
import PlayListItemCard  from "@/components/PlayListItemCard.astro"
---

<Layout title="Spotify Clone">
	<div 
        id="playlist-container"
        class=" rounded-lg relative transition-all duration-1000 bg-green-600"
    >
        <!-- <PageHeader /> -->
        <div class="relative z-10 px-6">
            <!-- <Greetings /> -->
            <h1 class="text-4xl font-bold">Buenos Dias</h1>

            <div class="flex flex-wrap mt-6 gap-4">
                {playlists.map(playlist => <PlayListItemCard playlist={playlist} />) }
            </div>
        </div>

        <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900bg-zinc-500">            
        </div>
    </div>
</Layout>

